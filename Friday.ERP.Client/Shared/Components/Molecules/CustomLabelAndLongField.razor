<CustomLabelAndInput Sm="@FirstSm" Md="@FirstMd" FirstText="@FirstText" Typo="@Typo">
    <MudItem sm="SecondSm" md="@SecondMd" Class="align-self-center">
        <MudTextField T="long" @bind-Value="@BindValue" Required="@Required" Immediate="true"
                      FullWidth="true" InputType="@KeyboardInputType"
                      a
                      Margin="Margin.Dense" Variant="Variant.Outlined">
        </MudTextField>
    </MudItem>
</CustomLabelAndInput>


@code {
    [Parameter] public int FirstSm { get; set; } = 5;

    [Parameter] public int FirstMd { get; set; } = 5;

    [Parameter] public int SecondSm { get; set; } = 7;

    [Parameter] public int SecondMd { get; set; } = 7;

    [Parameter] public string? FirstText { get; set; }

    [Parameter] public Typo Typo { get; set; } = Typo.body1;

    [Parameter]
    public long BindValue
    {
        get => _bindValue;
        set
        {
            if (_bindValue == value) return;
            _bindValue = value;
            BindValueChanged.InvokeAsync(value);
        }
    }

    [Parameter] public bool Required { get; set; }

    [Parameter] public InputType KeyboardInputType { get; set; } = InputType.Number;

    [Parameter] public EventCallback<long> BindValueChanged { get; set; }

    private long _bindValue;


}