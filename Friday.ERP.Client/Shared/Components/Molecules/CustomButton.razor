<MudButton OnClick="@OnClick" Variant="@Variant" FullWidth="@FullWidth"
           Color="@Color" Disabled="@IsLoading" DisableElevation="true">
    @if (IsLoading)
    {
        <MudProgressCircular Color="Color.Default" Style="height:27px;width:27px;" Indeterminate="true"/>
    }
    else
    {
        @Label
    }
</MudButton>

@code {

    [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }

    [Parameter] public RenderFragment? ChildContent { get; set; }

    [Parameter] public Color Color { get; set; } = Color.Primary;

    [Parameter] public Variant Variant { get; set; } = Variant.Outlined;

    [Parameter] public bool FullWidth { get; set; } = true;

    [Parameter] public bool IsLoading { get; set; }

    [Parameter] public string? Label { get; set; }
}