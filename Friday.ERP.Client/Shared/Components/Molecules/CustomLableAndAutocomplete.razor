<CustomLabelAndInput Sm="@FirstSm" Md="@FirstMd" FirstText="@FirstText" Typo="@Typo">
    <MudItem sm="SecondSm" md="@SecondMd" Class="align-self-center">
        <MudAutocomplete T="string?" Required="@Required" Dense="true" FullWidth="true" ResetValueOnEmptyText="true" Immediate="true"
                         Clearable="@Clearable" OnClearButtonClick="@OnClearButtonClick"
                         Variant="Variant.Outlined" Margin="Margin.Dense" Value="@Value"
                         ReadOnly="@ReadOnly" Disabled="@Disabled"
                         SearchFuncWithCancel="@SearchFuncWithCancel" ValueChanged="@ValueChanged"/>
    </MudItem>
</CustomLabelAndInput>


@code {
    [Parameter] public int FirstSm { get; set; } = 5;

    [Parameter] public int FirstMd { get; set; } = 5;

    [Parameter] public int SecondSm { get; set; } = 7;

    [Parameter] public int SecondMd { get; set; } = 7;

    [Parameter] public string? FirstText { get; set; }

    [Parameter] public Typo Typo { get; set; } = Typo.body1;

    [Parameter] public bool Disabled { get; set; }
    
    [Parameter] public bool ReadOnly { get; set; }
    
    [Parameter] public bool Clearable { get; set; }

    [Parameter] public bool Required { get; set; }

    [Parameter] public string? Value { get; set; }

    [Parameter] public Func<string, CancellationToken, Task<IEnumerable<string?>>>? SearchFuncWithCancel { get; set; }

    [Parameter] public EventCallback<MouseEventArgs> OnClearButtonClick { get; set; }

    [Parameter] public EventCallback<string?> ValueChanged { get; set; }

}