<CustomRowWithLabelAndInput Md="@FirstMd" Lg="@FirstLg" FirstText="@FirstText" Typo="@Typo">
    <MudItem Md="@SecondMd" Lg="@SecondLg" Class="align-self-center">
        <MudText Typo="Typo.subtitle1" Align="@SecondTextAlign" Color="@SecondTextColor">
            @SecondText
        </MudText>
    </MudItem>
</CustomRowWithLabelAndInput>


@code {
    [Parameter] public int FirstMd { get; set; } = 5;

    [Parameter] public int FirstLg { get; set; } = 5;

    [Parameter] public int SecondMd { get; set; } = 7;

    [Parameter] public int SecondLg { get; set; } = 7;

    [Parameter] public string? FirstText { get; set; }

    [Parameter] public string? SecondText { get; set; }

    [Parameter] public Typo Typo { get; set; } = Typo.body1;

    [Parameter] public Align SecondTextAlign { get; set; } = Align.Start;

    [Parameter] public Color SecondTextColor { get; set; } = Color.Dark;

}