<MudDialog>
    <DialogContent>
        <MudGrid Spacing="2">
            <CustomRowWithTwoLabels FirstText="SubTotal" SecondText="@SubTotal.ToString()"></CustomRowWithTwoLabels>
            <CustomRowWithTwoLabels FirstText="Discounts" SecondText="@Discount.ToString()"></CustomRowWithTwoLabels>
            <CustomRowWithTwoLabels FirstText="Discount Type" SecondText="@DiscountType"></CustomRowWithTwoLabels>
        </MudGrid>
        <MudDivider DividerType="DividerType.FullWidth" Class="my-4"></MudDivider>
        <MudGrid Spacing="2">
            <CustomRowWithTwoLabels FirstText="Total" SecondText="@Total.ToString()"></CustomRowWithTwoLabels>
        </MudGrid>
        <MudDivider DividerType="DividerType.FullWidth" Class="my-4"></MudDivider>
        <MudGrid Spacing="2">
            <CustomRowWithTwoLabels FirstText="Paid Total" SecondText="@PaidTotal.ToString()"></CustomRowWithTwoLabels>
            <CustomRowWithTwoLabels FirstText="Credit / Debit Left" 
                                    SecondTextColor="@(CreditDebitLeft < 0 ? Color.Error : Color.Dark)"
                                    SecondText="@CreditDebitLeft.ToString()"></CustomRowWithTwoLabels>
        </MudGrid>
        <MudDivider DividerType="DividerType.FullWidth" Class="my-4"></MudDivider>
        <MudGrid Spacing="2">
            <CustomRowWithTwoLabels FirstText="Remark" SecondText="@Remark"></CustomRowWithTwoLabels>
        </MudGrid>
        <MudDivider DividerType="DividerType.FullWidth" Class="my-4"></MudDivider>
        @if (IsPaid is not null)
        {
            <MudGrid Spacing="2">
                <CustomRowWithTwoLabels FirstText="IsPaid"
                                        SecondText="@(IsPaid)"></CustomRowWithTwoLabels>
            </MudGrid>
            <MudDivider DividerType="DividerType.FullWidth" Class="mt-4"></MudDivider>
        }
    </DialogContent>
    <DialogActions>
        <CustomButton OnClick="@Back" Color="Color.Default" Variant="Variant.Text" FullWidth="false">Back</CustomButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    [Parameter] public long? SubTotal { get; set; }
    [Parameter] public long? Discount { get; set; }
    [Parameter] public string? DiscountType { get; set; }
    [Parameter] public long? Total { get; set; }
    [Parameter] public long? PaidTotal { get; set; }
    [Parameter] public long? CreditDebitLeft { get; set; }
    [Parameter] public string? Remark { get; set; }
    [Parameter] public string? IsPaid { get; set; }
    

    void Back()
    {
        MudDialog!.Cancel();
    }

}