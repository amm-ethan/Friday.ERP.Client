<MudDialog>
    <DialogContent>
        <MudGrid Spacing="2">
            <CustomLabelAndLabel FirstText="SubTotal" SecondText="@SubTotal.ToString()"></CustomLabelAndLabel>
            <CustomLabelAndLabel FirstText="Discounts" SecondText="@Discount.ToString()"></CustomLabelAndLabel>
            <CustomLabelAndLabel FirstText="Discount Type" SecondText="@DiscountType"></CustomLabelAndLabel>
        </MudGrid>
        <MudDivider DividerType="DividerType.FullWidth" Class="my-4"></MudDivider>
        <MudGrid Spacing="2">
            <CustomLabelAndLabel FirstText="Total" SecondText="@Total.ToString()"></CustomLabelAndLabel>
        </MudGrid>
        <MudDivider DividerType="DividerType.FullWidth" Class="my-4"></MudDivider>
        <MudGrid Spacing="2">
            <CustomLabelAndLabel FirstText="Paid Total" SecondText="@PaidTotal.ToString()"></CustomLabelAndLabel>
            <CustomLabelAndLabel FirstText="Credit / Debit Left"
                                    SecondTextColor="@(CreditDebitLeft < 0 ? Color.Error : Color.Dark)"
                                    SecondText="@CreditDebitLeft.ToString()">
            </CustomLabelAndLabel>
        </MudGrid>
        <MudDivider DividerType="DividerType.FullWidth" Class="my-4"></MudDivider>
        <MudGrid Spacing="2">
            <CustomLabelAndLabel FirstText="Remark" SecondText="@Remark"></CustomLabelAndLabel>
        </MudGrid>
        <MudDivider DividerType="DividerType.FullWidth" Class="my-4"></MudDivider>
        @if (IsPaid is not null)
        {
            <MudGrid Spacing="2">
                <CustomLabelAndLabel FirstText="IsPaid"
                                        SecondText="@(IsPaid)">
                </CustomLabelAndLabel>
            </MudGrid>
            <MudDivider DividerType="DividerType.FullWidth" Class="mt-4"></MudDivider>
        }
    </DialogContent>
    <DialogActions>
        <CustomButton OnClick="@Back" Color="Color.Default" Variant="Variant.Text" FullWidth="false">Back</CustomButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    [Parameter] public long? SubTotal { get; set; }
    [Parameter] public long? Discount { get; set; }
    [Parameter] public string? DiscountType { get; set; }
    [Parameter] public long? Total { get; set; }
    [Parameter] public long? PaidTotal { get; set; }
    [Parameter] public long? CreditDebitLeft { get; set; }
    [Parameter] public string? Remark { get; set; }
    [Parameter] public string? IsPaid { get; set; }


    void Back()
    {
        MudDialog!.Cancel();
    }

}